<h1>Edit Product</h1>

<%= form_with(model: @product, local: true) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <% if @product.image.attached? %>
      <br>
      <%= image_tag @product.image, width: 150, height: 150 %>
    <% end %>
  </div>

  <div>
    <%= f.submit "Update Product", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to "Cancel", dashboard_index_path, class: "btn btn-secondary" %>
