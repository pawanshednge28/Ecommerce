<div class="row">
  <div class="col-md-6">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, class: "img-fluid rounded" %>
    <% else %>
      <img src="https://via.placeholder.com/500" class="img-fluid rounded" alt="No Image">
    <% end %>
  </div>

  <div class="col-md-6">
    <h2><%= @product.name %></h2>
    <p><%= @product.description %></p>
    <h4 class="text-success">$<%= @product.price %></h4>

    <div class="mt-3 d-flex justify-content-end gap-2">
    <% if current_user.role.in?(%w[buyer seller]) %>
      <%= link_to "Add to Cart", cart_items_path(product_id: @product.id), method: :post, class: "btn btn-warning px-4" %>
    <%end%>
      <%= link_to "Back to Products", products_path, class: "btn btn-primary px-4" %>
    </div>
  </div>
</div>
